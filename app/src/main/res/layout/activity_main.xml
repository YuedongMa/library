<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.vondear.rxtools.view.RxTitle
        android:id="@+id/rx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/system_bg"
        android:clipToPadding="true"
       app:leftIconVisibility="false"
        android:fitsSystemWindows="true"
        app:title="测试"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_marginBottom="52dp"
            android:layout_height="match_parent"/>

        <com.example.yuedong.library.widget.bottombar.W_BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/actionbar_shadow_up"
            android:layout_gravity="bottom"
            android:layout_marginBottom="52dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>